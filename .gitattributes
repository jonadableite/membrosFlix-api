# Auto detect text files and perform LF normalization
* text=auto

# Source code files (always use LF, even on Windows)
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.jsonc text eol=lf
*.sh text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sql text eol=lf

# Binary files (keep as-is)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.zip binary
*.gz binary
*.tar binary

# Ignore Windows device files
NUL linguist-vendored
nul linguist-vendored

# Package files (keep native line endings)
package.json text eol=lf
package-lock.json text eol=lf
yarn.lock text eol=lf

