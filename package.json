{
  "name": "membrosfilix-api",
  "version": "1.0.0",
  "type": "module",
  "description": "API para plataforma de membros",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "node --import tsx/esm --experimental-specifier-resolution=node --watch src/server.ts",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc --watch",
    "build:prod": "npm run clean && npm run type-check && npm run build",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "lint:fix": "biome lint --apply .",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "prod:start": "npm run prisma:generate && NODE_ENV=production node --optimize-for-size --max-old-space-size=460 dist/server.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:prod": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:reset": "prisma migrate reset",
    "prisma:seed": "tsx prisma/seed.ts",
    "create:admin": "node scripts/create-admin.js",
    "add:instructor": "node scripts/add-instructor-profile.js",
    "clean:uploads": "node scripts/clean-uploads.js",
    "fix:minio": "tsx scripts/fix-minio-policies.ts",
    "fix:videos": "tsx scripts/fix-video-headers.ts",
    "test": "jest",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:e2e": "jest --selectProjects e2e",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "validate": "npm run type-check && npm run lint && npm run format:check",
    "health": "curl http://localhost:3000/health",
    "ready": "curl http://localhost:3000/health/ready",
    "live": "curl http://localhost:3000/health/live"
  },
  "author": {
    "name": "Jonadab Leite",
    "email": "jonadab.leite@gmail.com",
    "url": "https://github.com/jonadableite"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.0.1",
    "@types/nodemailer": "^7.0.3",
    "@types/yup": "^0.29.14",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "minio": "^8.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.10",
    "pg": "^8.13.1",
    "prisma": "^6.0.1",
    "redis": "^4.7.1",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^11.0.3",
    "winston": "^3.18.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yup": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.9",
    "@babel/preset-env": "^7.26.9",
    "@biomejs/biome": "1.9.4",
    "@jest/globals": "^30.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.4",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.9.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "globals": "^15.12.0",
    "jest": "^30.2.0",
    "jest-environment-node": "^30.2.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  },
  "prisma": {
    "schema": "./prisma/schema.prisma"
  }
}
